<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity"
    android:background="#0748B8">
    <EditText
        android:textColor="#ffffff"
        android:background="@drawable/customedittext"
        android:drawableLeft="@drawable/lup2"
        android:drawablePadding="12dp"
        android:paddingLeft="12dp"
        android:id="@+id/editsearch"
        android:hint="Nhập để tìm kiếm"
        android:textColorHint="#f8faf8"
        android:layout_width="match_parent"
        android:layout_height="43dp"
        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/abc">
        <ListView

            android:divider="@null"
            android:layout_weight="1"
            android:id="@+id/listview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <Button
            android:id="@+id/btncall"
            android:layout_width="70sp"
            android:layout_height="70sp"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="30dp"
            android:background="@drawable/mau"
            android:drawablePadding="20sp"
            android:drawableRight="@drawable/call2"
            android:paddingRight="20sp"
            android:layout_marginBottom="32dp"
            />


        <Button
            android:id="@+id/btnthem1"
            android:layout_width="70sp"
            android:layout_height="70sp"
            android:layout_alignParentBottom="true"
            android:layout_gravity="right"
            android:layout_marginBottom="32dp"
            android:layout_marginLeft="290sp"
            android:background="@drawable/mau"
            android:drawablePadding="20sp"
            android:drawableRight="@drawable/add"
            android:paddingRight="20sp"
            android:textSize="40sp"
            android:textStyle="bold" />
    </RelativeLayout>

</LinearLayout>